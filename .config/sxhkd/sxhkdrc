# wm independent hotkeys
#

# terminal emulator
super + Return
	st

# program launcher
super + d
	rofi -show drun -theme ~/.config/rofi/conf.rasi	

super + z
	rofi -show run -theme ~/.config/rofi/flat-orange.rasi	

super + r
    rofrecord

super + p
	qutebrowser

super + o
    emacs

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# print screen (rofshot by astrak)
Print
	/home/arskiy/.scripts/rofshot

XF86Audio{Lower,Raise}Volume
    amixer set Master {10%-,10%+}

XF86AudioMute
    amixer set Master toggle

XF86MonBrightness{Down,Up}
    xbacklight {-dec,-inc} 10

#
# start notification scripts (~/.scripts/notifications)
#

# weather 
alt + w
  weather

# disk usage
alt + s
  disk

# volume
alt + f
  volume

# cpu stats
alt + z
  cpu

# mem stats
alt + m
  mem

# show current time
alt + t
  /home/arskiy/.scripts/notifications/time

# battery
alt + b
  battery

# show computer temperature
alt + r
  temp

# num of packages to update
alt + p
  updates

# show current date
alt + q
  /home/arskiy/.scripts/notifications/date

# show help lmao
alt + h
  /home/arskiy/.scripts/notifications/help
