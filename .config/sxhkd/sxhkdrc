# wm independent hotkeys
#

# terminal emulator
super + Return
	st

# program launcher
super + d
	rofi -show drun -theme ~/.config/rofi/conf.rasi	

super + z
	rofi -show run -theme ~/.config/rofi/flat-orange.rasi	

super + x
  man -k . | dmenu -l 30 | awk '{print $1}' | xargs -r man -Tpdf | zathura -

super + c
  /bin/ls -d /home/arskiy/Files/PDFs/* | dmenu -l 10 | awk '{gsub(/ /,"\\ ")}8' | xargs cat | zathura -

super + p
	qutebrowser

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

# print screen (rofshot by astrak)
Print
	/home/arskiy/.scripts/rofshot
#
# bspwm hotkeys
#
# Move floating windows (requires baskerville's xdo)
super + {Left,Right,Up,Down}
    xdo move {-x -20,-x +20,-y -20,-y +20}

#
# start notification scripts (~/.scripts/notifications)
#

# weather 
alt + w
  weather

# disk usage
alt + s
  disk

# volume
alt + f
  volume

# cpu stats
alt + z
  cpu

# mem stats
alt + m
  mem

# show current time
alt + t
  /home/arskiy/.scripts/notifications/time

# battery
alt + b
  battery

# show computer temperature
alt + r
  temp

# num of packages to update
alt + p
  updates

# show current date
alt + q
  /home/arskiy/.scripts/notifications/date

# show help lmao
alt + h
  /home/arskiy/.scripts/notifications/help
